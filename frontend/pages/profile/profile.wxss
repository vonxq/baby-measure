.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
}

/* 用户信息卡片 */
.user-card {
  background: white;
  margin: 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.user-avatar {
  margin-right: 25rpx;
}

.user-avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.edit-icon {
  font-size: 32rpx;
  color: #999;
}

/* 宝宝信息区域 */
.baby-section {
  margin: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.baby-card {
  background: white;
  border-radius: 20rpx;
  padding: 25rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.baby-avatar {
  margin-right: 25rpx;
}

.baby-avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
}

.baby-info {
  flex: 1;
}

.baby-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.baby-age {
  display: block;
  font-size: 26rpx;
  color: #FF6B9D;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.baby-birthday {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.switch-icon {
  font-size: 28rpx;
  color: #999;
}

/* 功能菜单 */
.menu-section {
  margin: 30rpx;
}

.menu-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 25rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.menu-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 退出登录 */
.logout-section {
  margin: 30rpx;
  padding: 0 20rpx;
}

.logout-btn {
  width: 100%;
  background: #ff4757;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 25rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.logout-btn:active {
  background: #ff3742;
} 