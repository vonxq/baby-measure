.welcome-card {
  text-align: center;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
}

.welcome-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #666;
}

.form-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.form-textarea {
  width: 100%;
  height: 120rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: white;
  resize: none;
} 