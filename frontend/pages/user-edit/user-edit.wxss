.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
}

/* 头像编辑 */
.avatar-section {
  background: white;
  padding: 60rpx 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.avatar-container {
  position: relative;
  display: inline-block;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 6rpx solid #f0f0f0;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.avatar-container:active .avatar-overlay {
  opacity: 1;
}

.edit-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.edit-text {
  font-size: 22rpx;
  color: white;
}

/* 表单区域 */
.form-section {
  background: white;
  padding: 0 30rpx;
}

.form-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  border: none;
  background: transparent;
}

/* 保存按钮 */
.save-section {
  margin: 60rpx 30rpx;
}

.save-btn {
  width: 100%;
  background: #FF6B9D;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.save-btn:active {
  background: #ff5a8a;
} 