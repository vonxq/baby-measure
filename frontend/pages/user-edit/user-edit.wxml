<view class="container">
  <!-- 头像编辑 -->
  <view class="avatar-section">
    <view class="avatar-container" bindtap="chooseAvatar">
      <image class="avatar" src="{{avatarUrl || '/images/default-avatar.png'}}" mode="aspectFill"></image>
      <view class="avatar-overlay">
        <view class="edit-icon">📷</view>
        <text class="edit-text">点击更换头像</text>
      </view>
    </view>
  </view>

  <!-- 昵称编辑 -->
  <view class="form-section">
    <view class="form-item">
      <text class="form-label">昵称</text>
      <input 
        class="form-input" 
        value="{{nickName}}" 
        placeholder="请输入昵称"
        bindinput="inputNickName"
      />
    </view>
  </view>

  <!-- 保存按钮 -->
  <view class="save-section">
    <button class="save-btn" bindtap="saveUserInfo">保存</button>
  </view>
</view> 