.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
}

/* 页面标题 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 主题网格 */
.theme-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.theme-item {
  background: white;
  border-radius: 20rpx;
  padding: 25rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.theme-item.active {
  border: 3rpx solid #FF6B9D;
  transform: scale(1.02);
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 157, 0.2);
}

.theme-preview {
  position: relative;
  margin-bottom: 15rpx;
}

.theme-color {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 auto;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
  position: relative;
}

.theme-check {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  color: #FF6B9D;
  font-size: 24rpx;
  font-weight: bold;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.theme-info {
  text-align: center;
}

.theme-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.theme-desc {
  display: block;
  font-size: 22rpx;
  color: #999;
}

/* 预览按钮 */
.preview-section {
  margin-bottom: 40rpx;
}

.preview-btn {
  width: 100%;
  background: #FF6B9D;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.preview-btn:active {
  background: #ff5a8a;
}

/* 说明区域 */
.tips-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.tips-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  margin-top: 5rpx;
}

.tips-content {
  flex: 1;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.tips-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
} 