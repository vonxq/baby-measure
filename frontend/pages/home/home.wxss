.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 顶部用户信息 */
.header {
  padding: 40rpx 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.age {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 宝宝信息卡片 */
.baby-card {
  margin: 30rpx;
  background: white;
  border-radius: 25rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.baby-avatar {
  margin-right: 30rpx;
}

.baby-avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid #f0f0f0;
}

.baby-info {
  flex: 1;
}

.baby-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.baby-age {
  display: block;
  font-size: 28rpx;
  color: #FF6B9D;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.baby-birthday {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 快速操作 */
.quick-actions {
  margin: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.action-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-card.primary {
  background: linear-gradient(135deg, #FF6B9D, #FF8E9E);
}

.action-card.secondary {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.action-icon {
  font-size: 48rpx;
  margin-right: 25rpx;
}

.action-content {
  flex: 1;
}

.action-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.action-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.action-arrow {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

/* 温馨提示 */
.tips-card {
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.tips-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  margin-top: 5rpx;
}

.tips-content {
  flex: 1;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.tips-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
} 