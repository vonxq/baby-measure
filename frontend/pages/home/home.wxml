<view class="container">
  <!-- 顶部用户信息 -->
  <view class="header">
    <view class="user-info" bindtap="goToProfile">
      <image class="avatar" src="{{currentBaby.avatarUrl || '/images/default-avatar.png'}}" mode="aspectFill"></image>
      <view class="user-details">
        <text class="nickname">{{currentBaby.nickname}}</text>
        <text class="age">{{babyAgeText}}</text>
      </view>
    </view>
  </view>

  <!-- 宝宝信息卡片 -->
  <view class="baby-card">
    <view class="baby-avatar">
      <image src="{{currentBaby.avatarUrl || '/images/default-baby.png'}}" mode="aspectFill"></image>
    </view>
    <view class="baby-info">
      <text class="baby-name">{{currentBaby.nickname}}</text>
      <text class="baby-age">{{babyAgeText}}</text>
      <text class="baby-birthday">生日：{{currentBaby.birthday}}</text>
    </view>
  </view>

  <!-- 快速操作 -->
  <view class="quick-actions">
    <view class="action-card primary" bindtap="startAssessment">
      <view class="action-icon">📊</view>
      <view class="action-content">
        <text class="action-title">开始评估</text>
        <text class="action-desc">为宝宝进行发育评估</text>
      </view>
      <view class="action-arrow">→</view>
    </view>

    <view class="action-card secondary" bindtap="viewRecords">
      <view class="action-icon">📈</view>
      <view class="action-content">
        <text class="action-title">查看记录</text>
        <text class="action-desc">查看历史评估记录</text>
      </view>
      <view class="action-arrow">→</view>
    </view>
  </view>

  <!-- 温馨提示 -->
  <view class="tips-card">
    <view class="tips-icon">💡</view>
    <view class="tips-content">
      <text class="tips-title">温馨提示</text>
      <text class="tips-text">建议每{{babyAge < 12 ? '1' : '3'}}个月为宝宝进行一次发育评估，及时了解宝宝的成长情况。</text>
    </view>
  </view>
</view> 