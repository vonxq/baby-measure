.login-card {
  text-align: center;
  padding: 80rpx 40rpx;
  margin-bottom: 40rpx;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: #666;
}

.auth-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
  text-align: center;
}

.auth-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.auth-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.btn-wechat {
  background: #07C160;
  color: white;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  padding: 25rpx 40rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.wechat-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.wechat-text {
  font-size: 32rpx;
}

.auth-tips {
  text-align: left;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  line-height: 1.5;
} 