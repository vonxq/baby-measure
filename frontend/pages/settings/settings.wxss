.header-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
  text-align: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #666;
}

.current-baby-card,
.babies-list-card,
.account-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.baby-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #FFF5F5;
  border-radius: 15rpx;
}

.baby-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #FFB6C1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.baby-avatar-text {
  font-size: 40rpx;
}

.baby-details {
  flex: 1;
}

.baby-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.baby-age {
  font-size: 24rpx;
  color: #FFB6C1;
  margin-bottom: 5rpx;
}

.baby-birthday {
  font-size: 22rpx;
  color: #666;
}

.edit-btn {
  padding: 10rpx 20rpx;
  background: #FFB6C1;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.no-baby {
  text-align: center;
  padding: 40rpx;
  color: #666;
}

.baby-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.baby-item:last-child {
  border-bottom: none;
}

.baby-actions {
  display: flex;
  gap: 10rpx;
}

.switch-btn {
  padding: 8rpx 16rpx;
  background: #E0E0E0;
  color: #666;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.switch-btn.active {
  background: #FFB6C1;
  color: white;
}

.delete-btn {
  padding: 8rpx 16rpx;
  background: #FF6B6B;
  color: white;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.setting-value {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.setting-arrow {
  font-size: 24rpx;
  color: #999;
}

.logout-card {
  margin-top: 40rpx;
}

.btn-logout {
  background: #FF6B6B;
  color: white;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  width: 100%;
} 