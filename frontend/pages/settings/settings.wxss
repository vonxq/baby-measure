.header-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
  text-align: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #666;
}

.current-baby-card,
.babies-list-card,
.account-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.baby-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #FFF5F5;
  border-radius: 15rpx;
}

.baby-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #FFB6C1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.baby-avatar-text {
  font-size: 40rpx;
}

.baby-details {
  flex: 1;
}

.baby-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.baby-age {
  font-size: 24rpx;
  color: #FFB6C1;
  margin-bottom: 5rpx;
}

.baby-birthday {
  font-size: 22rpx;
  color: #666;
}

.edit-btn {
  padding: 10rpx 20rpx;
  background: #FFB6C1;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.no-baby {
  text-align: center;
  padding: 40rpx;
  color: #666;
}

.baby-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.baby-item:last-child {
  border-bottom: none;
}

.baby-actions {
  display: flex;
  gap: 10rpx;
}

.switch-btn {
  padding: 8rpx 16rpx;
  background: #E0E0E0;
  color: #666;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.switch-btn.active {
  background: #FFB6C1;
  color: white;
}

.delete-btn {
  padding: 8rpx 16rpx;
  background: #FF6B6B;
  color: white;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.setting-value {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.setting-arrow {
  font-size: 24rpx;
  color: #999;
}

.logout-card {
  margin-top: 40rpx;
}

.btn-logout {
  background: #FF6B6B;
  color: white;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  width: 100%;
} 

.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
}

/* 区域标题 */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

/* 主题网格 */
.theme-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.theme-item {
  background: white;
  border-radius: 20rpx;
  padding: 25rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.theme-item.active {
  border: 3rpx solid #FF6B9D;
  transform: scale(1.02);
}

.theme-color {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 0 auto 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
}

.theme-name {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

/* 菜单项 */
.menu-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 25rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.menu-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 退出登录 */
.logout-section {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.logout-btn {
  width: 100%;
  background: #ff4757;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 25rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.logout-btn:active {
  background: #ff3742;
} 