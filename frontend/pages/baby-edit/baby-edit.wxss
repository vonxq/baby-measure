.header-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
  text-align: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #666;
}

.form-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: white;
}

.picker-text {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: white;
  line-height: 80rpx;
  color: #333;
}

.form-textarea {
  width: 100%;
  height: 120rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: white;
  resize: none;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-buttons .btn-primary,
.action-buttons .btn-secondary {
  flex: 1;
  margin: 0;
}

.delete-section {
  margin-top: 40rpx;
}

.btn-delete {
  background: #FF6B6B;
  color: white;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  width: 100%;
} 