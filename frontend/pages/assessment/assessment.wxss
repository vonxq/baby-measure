.age-selector-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  text-align: center;
}

.card-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.age-info {
  background: #FFF5F5;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.actual-age,
.suggested-age {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.suggested-age {
  color: #FFB6C1;
  font-weight: bold;
}

.age-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.age-option {
  flex: 0 0 calc(33.33% - 10rpx);
  min-width: 180rpx;
  padding: 15rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  text-align: center;
  background: white;
  transition: all 0.3s ease;
}

.age-option.selected {
  border-color: #FFB6C1;
  background: #FFF5F5;
}

.age-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.age-title {
  font-size: 22rpx;
  color: #666;
  line-height: 1.3;
}

.progress-bar {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
}

.progress-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  text-align: center;
}

.progress-line {
  height: 10rpx;
  background: #F0F0F0;
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #FFB6C1, #FF69B4);
  transition: width 0.3s ease;
}

.question-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
}

.question-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.question-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 15rpx;
  background: white;
  transition: all 0.3s ease;
}

.option-item.selected {
  border-color: #FFB6C1;
  background: #FFF5F5;
}

.option-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.option-score {
  font-size: 24rpx;
  color: #FFB6C1;
  font-weight: bold;
}

.result-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
  text-align: center;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.assessment-info {
  background: #FFF5F5;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #FFB6C1;
  font-weight: bold;
}

.score-display {
  margin-bottom: 30rpx;
}

.score-number {
  font-size: 60rpx;
  font-weight: bold;
  color: #FFB6C1;
  margin-bottom: 10rpx;
}

.score-label {
  font-size: 28rpx;
  color: #666;
}

.rank-info {
  margin-bottom: 30rpx;
}

.rank-text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.rank-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF69B4;
}

.result-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.navigation-buttons {
  display: flex;
  gap: 20rpx;
}

.navigation-buttons .btn-primary,
.navigation-buttons .btn-secondary {
  flex: 1;
  margin: 0;
} 