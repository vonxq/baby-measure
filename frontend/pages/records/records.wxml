<view class="container">
  <view class="header-card">
    <view class="header-title">评估记录</view>
    <view class="header-subtitle">查看宝宝的成长轨迹</view>
  </view>

  <view class="records-list" wx:if="{{records.length > 0}}">
    <view class="record-item" wx:for="{{records}}" wx:key="id">
      <view class="record-header">
        <view class="record-date">{{item.assessmentDate}}</view>
        <view class="record-ages">
          <view class="age-badge actual">实际{{item.actualAge}}个月</view>
          <view class="age-badge assessment">测评{{item.assessmentAge}}个月</view>
        </view>
      </view>
      
      <view class="record-content">
        <view class="score-section">
          <view class="score-label">评估分数</view>
          <view class="score-value">{{item.score}}分</view>
        </view>
        
        <view class="rank-section">
          <view class="rank-label">同月龄排名</view>
          <view class="rank-value">第{{item.rank}}名</view>
        </view>
      </view>
      
      <view class="record-footer">
        <view class="progress-indicator">
          <view class="progress-text">发育水平</view>
          <view class="progress-bar">
            <view class="progress-fill" style="width: {{item.score / 25 * 100}}%"></view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="empty-state" wx:if="{{records.length === 0}}">
    <view class="empty-icon">📊</view>
    <view class="empty-title">暂无评估记录</view>
    <view class="empty-subtitle">开始第一次评估，记录宝宝的成长</view>
    <button class="btn-primary" bindtap="goToAssessment">开始评估</button>
  </view>

  <view class="chart-card" wx:if="{{records.length > 0}}">
    <view class="chart-title">成长趋势</view>
    <view class="chart-container">
      <canvas canvas-id="growthChart" class="growth-chart"></canvas>
    </view>
  </view>
</view> 