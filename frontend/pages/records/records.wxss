.header-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
  text-align: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #666;
}

.records-list {
  margin-bottom: 30rpx;
}

.record-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.record-date {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.record-ages {
  display: flex;
  gap: 10rpx;
}

.age-badge {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  font-weight: bold;
}

.age-badge.actual {
  background: #FFF5F5;
  color: #FFB6C1;
}

.age-badge.assessment {
  background: #FFB6C1;
  color: white;
}

.record-content {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.score-section,
.rank-section {
  text-align: center;
  flex: 1;
}

.score-label,
.rank-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.score-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFB6C1;
}

.rank-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF69B4;
}

.record-footer {
  border-top: 1rpx solid #F0F0F0;
  padding-top: 20rpx;
}

.progress-indicator {
  margin-top: 10rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.progress-bar {
  height: 8rpx;
  background: #F0F0F0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #FFB6C1, #FF69B4);
  transition: width 0.3s ease;
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.chart-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.1);
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.chart-container {
  display: flex;
  justify-content: center;
}

.growth-chart {
  width: 300rpx;
  height: 200rpx;
} 