.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
}

/* Tab切换 */
.tab-header {
  background: white;
  display: flex;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #FF6B9D;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #FF6B9D;
  border-radius: 2rpx;
}

/* 时间轴视图 */
.timeline-view {
  padding: 30rpx;
}

.timeline-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.timeline-item {
  background: white;
  border-radius: 20rpx;
  padding: 25rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: 80rpx;
  top: 50%;
  width: 2rpx;
  height: 60rpx;
  background: #FF6B9D;
  transform: translateY(-50%);
}

.timeline-date {
  text-align: center;
  margin-right: 30rpx;
  min-width: 80rpx;
}

.date-day {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B9D;
  margin-bottom: 5rpx;
}

.date-month {
  font-size: 22rpx;
  color: #666;
}

.timeline-content {
  flex: 1;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.timeline-age {
  font-size: 24rpx;
  color: #FF6B9D;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.timeline-score,
.timeline-rank {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 3rpx;
}

.timeline-icon {
  font-size: 40rpx;
  margin-left: 20rpx;
}

/* 趋势图视图 */
.chart-view {
  padding: 30rpx;
}

.chart-container {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.growth-chart {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.chart-legend {
  display: flex;
  justify-content: center;
  align-items: center;
}

.legend-item {
  display: flex;
  align-items: center;
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  background: #FF6B9D;
  border-radius: 50%;
  margin-right: 10rpx;
}

.legend-text {
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.empty-btn {
  background: #FF6B9D;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
} 