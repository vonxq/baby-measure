.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #FFB6C1 0%, #FFC0CB 100%);
  min-height: 100vh;
}

.result-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.result-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.result-subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
}

.assessment-info {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #666;
  font-size: 28rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

.score-display {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 60rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.score-number {
  font-size: 120rpx;
  font-weight: bold;
  color: #FF6B9D;
  line-height: 1;
  margin-bottom: 20rpx;
}

.score-label {
  font-size: 32rpx;
  color: #666;
}

.rank-info {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.rank-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.rank-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #FF6B9D;
}

.result-description {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.description-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.description-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.btn-secondary {
  flex: 1;
  background: rgba(255, 255, 255, 0.8);
  color: #666;
  border: 2rpx solid #ddd;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.btn-primary {
  flex: 1;
  background: #FF6B9D;
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.share-section {
  text-align: center;
}

.btn-share {
  background: rgba(255, 255, 255, 0.8);
  color: #FF6B9D;
  border: 2rpx solid #FF6B9D;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 28rpx;
} 